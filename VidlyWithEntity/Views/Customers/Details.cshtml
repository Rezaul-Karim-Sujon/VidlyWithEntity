@model  VidlyWithEntity.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        <b>Membership Type:</b>&ensp;@Model.MembershipType.Name
    </li>
    @if (Model.Birthdate.HasValue)
    {
        <li>
            <b>Birthdate:</b>&emsp;&emsp;&emsp;&emsp; @Model.Birthdate.Value.ToLongDateString()
        </li>
    }
</ul>